<h3>Products</h3>

<% if @products.any? %>
  <table class="table" cellpadding="0" cellspacing="0">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>

    <% @products.each do |prod| %>
      <tr>
        <td><%= prod.name %></td>
        <td>Â£<%= prod.price %></td>
        <td><%= link_to 'show', admin_product_path(prod) %></td>
        <td><%= link_to 'edit', edit_admin_product_path(prod) %></td>
        <td><%= link_to 'delete', admin_product_path(prod), method: :delete %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>There are no products to show</p>
<% end %>

<%= link_to 'Add New Product', new_admin_product_path, class: "button" %>